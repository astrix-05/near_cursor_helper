{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "types": ["node", "vscode", "jest"]
  },
  "include": ["src/**/*.ts", "src/__tests__/**/*.ts", "src/__mocks__/**/*.ts"],
  "exclude": ["node_modules", ".vscode"]
}

